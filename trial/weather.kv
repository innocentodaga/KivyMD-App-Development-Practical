<AddLocationForm>:
    orientation: "vertical"
    BoxLayout:
        height: '40dp'
        size_hint_y: None
        TextInput:
            size_hint_x: 0.5
        Button:
            text: "Search"
            size_hint_x: 0.25
        Button:
            text: "Current Location"
            size_hint_x: 0.25
    RecycleView:
        viewclass: 'Label'
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
        data: ["Palo Alto, MX",  "Palo Alto, US"]
